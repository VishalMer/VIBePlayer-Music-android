<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp"
    android:background="?attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardArtSmall"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#E0E0E0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imgArtSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtSongTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chahun Main Ya Naa"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@id/cardArtSmall"
        app:layout_constraintTop_toTopOf="@id/cardArtSmall"
        app:layout_constraintEnd_toStartOf="@id/txtSongDuration"
        app:layout_constraintBottom_toTopOf="@+id/txtSongArtist"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/txtSongArtist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Arijit Singh"
        android:textColor="#A0A0A0"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/txtSongTitle"
        app:layout_constraintTop_toBottomOf="@id/txtSongTitle"
        app:layout_constraintEnd_toEndOf="@id/txtSongTitle"
        app:layout_constraintBottom_toBottomOf="@id/cardArtSmall"/>

    <TextView
        android:id="@+id/txtSongDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2:44"
        android:textColor="#A0A0A0"
        android:textSize="12sp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@id/btnMenuRow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/btnMenuRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_more"
        app:tint="#A0A0A0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>