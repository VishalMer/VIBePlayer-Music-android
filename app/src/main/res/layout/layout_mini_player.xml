<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/bg_gradient_tl_to_br" > <androidx.cardview.widget.CardView
    android:id="@+id/cardMiniArt"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/imgMiniArt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />
</androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtMiniTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Raataan Lambiyan"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtMiniArtist"
        app:layout_constraintEnd_toStartOf="@+id/btnMiniPlay"
        app:layout_constraintStart_toEndOf="@id/cardMiniArt"
        app:layout_constraintTop_toTopOf="@id/cardMiniArt"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/txtMiniArtist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Tanishk Bagchi"
        android:textColor="#E0E0E0"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/cardMiniArt"
        app:layout_constraintEnd_toEndOf="@id/txtMiniTitle"
        app:layout_constraintStart_toStartOf="@id/txtMiniTitle"
        app:layout_constraintTop_toBottomOf="@id/txtMiniTitle" />

    <ImageView
        android:id="@+id/btnMiniPlay"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:padding="8dp"
        android:src="@android:drawable/ic_media_play"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressMiniPlayer"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:progress="40"
        android:progressTint="@color/white"
        android:progressBackgroundTint="#55FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>